<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

<div class="container col-sm-8 mt-4 mb-4">
  <h2>Cadastrar Investidor</h2>
</div>

  <div class="form-inputs form-group container col-sm-8 mt-4 mb-4">
    <%= f.input :name,
                label: 'Nome',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "name" }%>    
    <%= f.input :document,
                label: 'Documento',
                required: true,
                input_html: { autocomplete: "document" }%>  
    <%= f.input :linkedin,
                label: 'Linkedin',
                required: true,
                input_html: { autocomplete: "linkedin" }%>  
    <%= f.input :birth_day,
                label: 'Data de Nascimento',
                as: :date, html5: true,
                required: true,
                input_html: { autocomplete: "birth_day" }%> 
    <%= f.input :amount_available_to_invest,
                label: 'Valor disponÃ­vel para investir: ',
                required: true,
                input_html: { autocomplete: "amount_available_to_invest" }%> 
    <%= f.input :email,
                label: 'Email',
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                label: 'Senha',
                required: true,
                hint: ("MÃ­nimo de caracteres: #{@minimum_password_length}" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: 'Confirme sua senha',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-inputs form-group container col-sm-8 mt-4 mb-4">
    <%= f.button :submit, "Cadastrar", class: "btn btn-primary" %>
  </div>
<% end %>


