<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-4 mb-4">
      <h2 class="mb-4">Investidores</h2>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @investors.each do |investor| %>
      <div class="col-sm-6 mb-5">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= link_to(investor.name, investor_path(investor)) %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>e-mail: </strong><%= investor.email %></li>
            <li class="list-group-item"><strong>Valor dispon√≠vel para investir: </strong> <%= number_to_currency investor.amount_available_to_invest %> </li>
          </ul>
          <div class="card-body">
            <a href="<%= investor_path(investor) %>" class="btn btn-primary">Ver perfil</a>
            <a href="#" class="btn btn-secondary">Enviar mensagem</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
