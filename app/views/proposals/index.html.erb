<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="mt-5 mb-4">
      <h2 class="mb-4">Propostas</h2>
    </div>
  </div>
</div>

<% if @proposals.empty? %>
    <div class="alert alert-warning" role="alert">
        Não há propostas cadastradas
    </div>
<% end %>

<div class="container">
  <div class="row justify-content-center">
    <% @proposals.each do |proposal| %>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= proposal.idea.title %></h5>
            <p class="card-text"><%= proposal.idea.user.name %></p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Tipo de investimento: </strong><%= proposal.investment_type.name %> </li>
            <li class="list-group-item"><strong>Dúvidas: </strong> <%= proposal.doubts %> </li>
            <li class="list-group-item"><strong>Fale mais sobre sua proposta: </strong><%= proposal.details %> </li>
            <li class="list-group-item"><strong>Investidor: </strong><%= proposal.user.name %></li>
          </ul>
        </div>
      </div>
    <% end %>
  </div>
</div>