<h1>Bem-vindo ao S2Business</h1>
<% @ideas.each do |idea|%>
<div id="idea-<%=idea.id%>">
  <h1><%= idea.title %></h1>
  <p><%= truncate(idea.description, length: 25, omission: '...') { link_to 'Ver detalhes', idea_path(idea) } %></p>
  <p><%= number_to_currency(idea.initial_investment_value, unit: 'R$ ', separator:',', delimiter: '' ) %></p>
  <p><%= idea.estimated_project_time_to_month %></p>
  <p><%= idea.estimated_time_to_profit_to_month %></p>
</div>
<% end%>